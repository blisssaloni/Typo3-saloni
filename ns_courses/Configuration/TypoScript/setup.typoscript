plugin.tx_nscourses_course {
    view {
        templateRootPaths.0 = EXT:ns_courses/Resources/Private/Templates/
        templateRootPaths.1 = {$plugin.tx_nscourses_course.view.templateRootPath}
        partialRootPaths.0 = EXT:ns_courses/Resources/Private/Partials/
        partialRootPaths.1 = {$plugin.tx_nscourses_course.view.partialRootPath}
        layoutRootPaths.0 = EXT:ns_courses/Resources/Private/Layouts/
        layoutRootPaths.1 = {$plugin.tx_nscourses_course.view.layoutRootPath}
    }
  # persistence {
   #    storagePid = {$plugin.tx_nscourses_course.persistence.storagePid}
   #}
    features {
        ignoreAllEnableFieldsInBe = 0
    }
    mvc {
        #callDefaultActionIfActionCantBeResolved = 1
    }
}

