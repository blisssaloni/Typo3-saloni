plugin.tx_nscourses._CSS_DEFAULT_STYLE (
    textarea.f3-form-error {
        background-color: #FF9F9F;
        border: 1px #FF0000 solid;
    }

    input.f3-form-error {
        background-color: #FF9F9F;
        border: 1px #FF0000 solid;
    }

    .tx-ns-courses table {
        border-collapse: separate;
        border-spacing: 10px;
    }

    .tx-ns-courses table th {
        font-weight: bold;
    }

    .tx-ns-courses table td {
        vertical-align: top;
    }

    .typo3-messages .message-error {
        color: red;
    }

    .typo3-messages .message-ok {
        color: green;
    }
)
